# Default editing configuration
softWrap         = false
softTabs         = true
tabSize          = 2

fontName         = "Inconsolata"
fontSize         = 12
showInvisibles   = true

# show the path to the current tab's file in the window title
windowTitle      = "$TM_DISPLAYNAME${TM_DIRECTORY/\A(?:\/Volumes\/Josh\/Dropbox\w+\/?(.*)|(.+))\z/${2:? – ${2/\A\/Volumes\/Josh\/Dropbox/~/}:${1/\A(?=.)/ – /}}/}"

include = "{.tm_properties,.htaccess,.gitignore}"

# File type specific configuration
[ text ]
showInvisibles   = true
softWrap         = true

[ source ]
softTabs         = true
tabSize          = 2

[ source.python ]
softTabs         = true
tabSize          = 4

[ *.{txt,md,mdown,markdown} ]
