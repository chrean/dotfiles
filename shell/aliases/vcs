alias gits='git status -sb $argv; return 0'
alias gitd='gd $argv'

function s() {
	if is_git_repo; then
		gits $@
	elif is_svn_repo; then
		svn stat --ignore-externals
	fi
}

function d() {
	if is_git_repo; then
		gitd $@
	elif is_svn_repo; then
		svn diff $@ | colordiff | less -R
	fi
}

is_git_repo() { git branch > /dev/null 2>&1 }
is_svn_repo() { test -d .svn }
