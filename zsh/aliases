if [ `uname` = 'Darwin' ]; then
  alias ls='ls -G'
  alias du='du -k -d 1 $argv'

  alias reload_webkit='osascript -e 'tell application "WebKit" to do JavaScript "window.location.reload()" in front document''
else
  alias ls='ls --color=auto'
  alias du='du -k --max-depth=1 $argv'
fi

alias l='ls'
alias ll='ls -lh'
alias la='ls -a'
alias lal='ls -lah'

alias s='git status -sb $argv; return 0'
alias d='gd $argv'

alias df='df -kh $argv'
alias tigs='tig status $argv'

alias add_alias='sub -w ~/bin/dotfiles/zsh/aliases; cd ~/bin/dotfiles; ga ~/bin/dotfiles/zsh/aliases; gc'
alias add_alias='sub -w ~/bin/dotfiles/zsh/git_aliases; cd ~/bin/git_dotfiles; ga ~/bin/dotfiles/zsh/git_aliases; gc'

alias af='a function $*'
alias cdw='cd ~/src/wordpress/trunk'

function a() {
  if [[ $ARGC -eq 0 ]]
  then ack
  else ack --before-context=10 --pager='less -FRX' "$*";
  fi
}
cd() {
  builtin cd "$@" && ls
}

alias e.='sub ~/bin/dotfiles'
function e() {
  if [[ $ARGC -eq 0 ]]
  then sub .
  else sub $@ && cd $@
  fi
}

alias reload!='source ~/.zshrc'