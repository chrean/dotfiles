project_pwd() {
  echo $PWD | sed -e "s/\/Volumes\/Josh/~/" -e "s/~\/src\/\([^\/]*\)\/current/\\1/" -e "s/~\/Sites\/\([^\/]*\)\/current/http:\/\/\\1/"
}

export PROMPT=$'%{\e[0;90m%}%n@%M%{\e[0m%}
%{\e[0;%(?.32.31)m%}â†’%{\e[0m%} '
export RPROMPT=$'%{\e[0;90m%}$(project_pwd)$(git_cwd_info)%{\e[0m%}'
